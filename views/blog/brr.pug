doctype html
html(lang='en', data-theme='light')
    include ../components/head.pug

    body(data-page="brr_article")
        include ../components/navbar.pug

        section(class='content')
            div(class='content-container')
                h2(data-key='brr_article.title')= translations.brr_article.title
                p(class='date') 22/02/2025
                div(data-key='brr_article.content')!= translations.brr_article.content
                div(class='github-container', id='github-projects')
                div(data-key='brr_article.conclusion')!= translations.brr_article.conclusion

        include ../components/footer.pug

    script(src='../theme.js')
    script(src='../nav.js')
    script(src='../lang.js')