doctype html
html(lang=language, data-theme='light')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet' type='text/css', href='/static/styles/style.min.css')
        meta(name='author', content='Maximilien Nadji')
        meta(property="og:site_name" content=translations.title)
        meta(property="og:title" content=translations.brr_article.title)
        if language == "fr"
            meta(property="og:description" content="Découvrez comment établir des processus de sauvegarde, de restauration et de récupération afin de protéger les données et d’assurer la continuité des activités")
            meta(name='description', content="Découvrez comment établir des processus de sauvegarde, de restauration et de récupération afin de protéger les données et d’assurer la continuité des activités")
            meta(name='keywords', content='Linux, Administrateur, Système, Automatisation, Backup, Sauvegarde, Restauration, Récupération, Données')
        else
            meta(property="og:description" content="Discover how to establish backup, restoration, and recovery processes to protect data and ensure business continuity")
            meta(name="description" content="Discover how to establish backup, restoration, and recovery processes to protect data and ensure business continuity")
            meta(name='keywords', content='Linux, Automation, Administrator, System, Backup, Restore, Recovery, Data')
        meta(property="og:image" content="https://maximilien-nadji.com/thumbnail.jpg")
        meta(property="og:url" content="https://maximilien-nadji.com")
        meta(property="og:type" content="website")
        meta(name="twitter:card" content="summary_large_image")
        meta(name="twitter:image" content="https://maximilien-nadji.com/thumbnail.jpg")
        link(rel='canonical' href='https://maximilien-nadji.com/blog/backup-restore-recovery')
        link(rel='alternate' hreflang='en' href='https://maximilien-nadji.com/en/blog/backup-restore-recovery')
        link(rel='alternate' hreflang='fr' href='https://maximilien-nadji.com/fr/blog/backup-restore-recovery')
        link(rel="apple-touch-icon" sizes="180x180" href="/static/images/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="/static/images/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="/static/images/favicon-16x16.png")
        link(rel="shortcut icon" href="/favicon.ico" type="image/x-icon")
        link(rel="manifest" href="/manifest.json")
        title(data-key='title')= translations.title

    body
        include ../components/navbar.pug

        section(class='content')
            div(class='content-container')
                h1(data-key='brr_article.title')= translations.brr_article.title
                p(class='date') 17/03/2025
                div(data-key='brr_article.content')!= translations.brr_article.content
                div(data-key='brr_article.conclusion')!= translations.brr_article.conclusion

        include ../components/footer.pug

        script(src='/theme.js')
        script(src='/nav.js')
        script(src='/lang.js')